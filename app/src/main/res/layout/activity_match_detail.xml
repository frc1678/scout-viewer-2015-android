<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="org.citruscircuits.scout_viewer_2015_android.TeamDetailActivity"
    android:id="@+id/teamDetailRoot">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="44sp"
        android:text="MATCHNUM"
        android:layout_marginBottom="15sp"
        android:id="@+id/matchNumberText"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/matchNumberText"
        android:layout_centerHorizontal="true"
        android:id="@+id/redTeamLayout"
        android:weightSum="3"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="RED1"
            android:textColor="#dd2121"
            android:textAlignment="center"
            android:gravity="center"
            android:id="@+id/redTeam1"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="RED2"
            android:textColor="#dd2121"
            android:textAlignment="center"
            android:gravity="center"
            android:id="@+id/redTeam2"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="RED3"
            android:textColor="#dd2121"
            android:textAlignment="center"
            android:gravity="center"
            android:id="@+id/redTeam3"
            android:layout_weight="1"/>

        </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/redTeamLayout"
        android:layout_centerHorizontal="true"
        android:id="@+id/blueTeamLayout"
        android:weightSum="3"
        android:layout_marginBottom="40dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="BLUE1"
            android:textColor="#2121dd"
            android:textAlignment="center"
            android:gravity="center"
            android:id="@+id/blueTeam1"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="BLUE2"
            android:textColor="#2121dd"
            android:textAlignment="center"
            android:gravity="center"
            android:id="@+id/blueTeam2"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="BLUE3"
            android:textColor="#2121dd"
            android:textAlignment="center"
            android:gravity="center"
            android:id="@+id/blueTeam3"
            android:layout_weight="1"/>

    </LinearLayout>




    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/blueTeamLayout"
        android:layout_centerHorizontal="true"
        android:id="@+id/scoreLayout"
        android:layout_marginBottom="13dp"
        android:weightSum="2">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="55sp"
            android:text="BLUESCORE"
            android:textColor="#2121dd"
            android:textAlignment="center"
            android:gravity="center"
            android:id="@+id/blueTeamScore"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="55sp"
            android:text="REDSCORE"
            android:textColor="#dd2121"
            android:textAlignment="center"
            android:gravity="center"
            android:id="@+id/redTeamScore"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scoreLayout"
        android:layout_centerHorizontal="true"
        android:id="@+id/predictedScoreLayout"
        android:weightSum="2">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="23sp"
            android:text=""
            android:textColor="#2121dd"
            android:textAlignment="center"
            android:gravity="center"
            android:id="@+id/blueTeamPredictedScore"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="23sp"
            android:text=""
            android:textColor="#dd2121"
            android:textAlignment="center"
            android:gravity="center"
            android:id="@+id/redTeamPredictedScore"
            android:layout_weight="1"/>

    </LinearLayout>



</RelativeLayout>
